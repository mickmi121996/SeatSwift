<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Background Colors -->
    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#383838"/>
    <SolidColorBrush x:Key="SecondaryBackGroundColor" Color="#F6F6F6"/>

    <!-- Primary Colors -->
    <SolidColorBrush x:Key="PrimaryGreenColor" Color="#208420"/>
    <SolidColorBrush x:Key="SecondaryBlueColor" Color="#73B3CD"/>

    <!-- Typograhy Colors -->
    <SolidColorBrush x:Key="PrimaryTextColor" Color="#F6F6F6"/>
    <SolidColorBrush x:Key="SecondaryTextColor" Color="#B0B7C3"/>
    <SolidColorBrush x:Key="ThirdTextColor" Color="#8A94A6"/>
    <SolidColorBrush x:Key="FourthTextColor" Color="#4B5D78"/>

    <!-- Icon Colors -->
    <SolidColorBrush x:Key="PrimaryIconColor" Color="#B0B7C3"/>
    <SolidColorBrush x:Key="SecondaryIconColor" Color="#8A94A6"/>
    <SolidColorBrush x:Key="ThirdIconColor" Color="#4B5D78"/>
    <SolidColorBrush x:Key="FourthIconColor" Color="#373841"/>

    <SolidColorBrush x:Key="AlertColor" Color="#FF0000"/>

</ResourceDictionary>